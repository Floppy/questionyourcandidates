<% form_for [@seat, @event] do |f| %>

  <%= f.label :title %> <%= f.text_field :title %> <br/>
  
  <%= f.label :starting_at %> <%= f.datetime_select :starting_at %> <br/>

  <%= f.label :location %> <%= f.text_area :location %> <br/>

  <%= f.label :description %> <%= f.text_area :description %> <br/>

  <%= f.label :reference %> <%= f.text_field :reference %> <br/>

  <%= f.submit %>

<% end %>
